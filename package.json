{
  "name": "typescript-boilerplate",
  "version": "1.3.20",
  "main": "src/main.ts",
  "scripts": {
    "start": "npx tsx ./src/main.ts",
    "lint": "cross-env TIMING=1 npx eslint",
    "lint:fix": "npm run lint -- --fix",
    "lint:debug": "npm run lint -- --debug",
    "format:md": "npx prettier --write \"**/*.md\"",
    "typecheck": "npx tsc --noEmit",
    "test": "npx vitest",
    "bump-version": "npx tsx ./scripts/bump-version.script.ts && npm audit fix",
    "parse-llm-response": "npx tsx ./scripts/split-plain-code.ts",
    "format": "npx prettier . --write"
  },
  "keywords": [
    "typescript",
    "boilerplate",
    "eslint",
    "prettier",
    "modern",
    "vitest",
    "template"
  ],
  "author": "Dmytro Vakulenko",
  "license": "ISC",
  "description": "Modern, scalable TypeScript boilerplate for Node.js projects with strict linting, Prettier formatting, modular structure, and Vitest testing.",
  "dependencies": {
    "typed-dotenv": "^10.0.2"
  },
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "^7.1.19",
    "@dword-design/eslint-plugin-import-alias": "^8.1.3",
    "@eslint/compat": "^2.0.2",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/node": "^22.18.8",
    "@vitest/eslint-plugin": "^1.6.6",
    "cross-env": "^10.1.0",
    "deepmerge": "^4.3.1",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-naming": "^1.8.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-no-barrel-files": "^1.2.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-project-structure": "^3.14.2",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.4.1",
    "globals": "^17.3.0",
    "json5": "^2.2.3",
    "prettier": "^3.8.1",
    "type-fest": "^5.4.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "unplugin-swc": "^1.5.9",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "eslint-config-airbnb-base": {
      "eslint": "^9"
    }
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git@github-personal:DrSmile444/typescript-boilerplate.git"
  }
}
